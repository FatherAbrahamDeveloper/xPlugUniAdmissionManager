@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center mt-5">
    <h1 class="display-4 fw-bold">Welcome to xPlug University</h1>
    <p class="lead mt-3">Your journey to academic excellence begins here!</p>
    <img src="~/img/221.jpg" class="img-fluid rounded mb-4" alt="xPlug University Campus" />

    <div class="row">
        <div class="col-md-4">
            <a href="@Url.Action("Instruction", "Home")" class="btn btn-primary btn-lg w-100 mb-3">
                <i class="fas fa-info-circle"></i> Admission Instructions
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("About", "Home")" class="btn btn-outline-primary btn-lg w-100 mb-3">
                <i class="fas fa-university"></i> About Us
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Login", "Home")" class="btn btn-success btn-lg w-100 mb-3">
                <i class="fas fa-sign-in-alt"></i> Login to Apply
            </a>
        </div>
    </div>
</div>
