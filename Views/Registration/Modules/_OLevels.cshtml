@model IEnumerable<OlevelsVM>

@{
    Layout = null;
    var items = Model ?? new List<OlevelsVM>();
    var k = 0;
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">O-Levels Information</h5>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>S/No</th>
                    <th>Exam Body</th>
                    <th>Exam Type</th>
                    <th>Exam Year</th>
                    <th>Subject</th>
                    <th>Grade</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        k++;
                        <tr>
                            <td>@Model.ToList().IndexOf(item) + 1</td>
                            <td>@item.ExamBody.ToString()</td>
                            <td>@item.ExamType.ToString()</td>
                            <td>@item.ExamYear</td>
                            <td>@item.Subject.ToString()</td>
                            <td>@item.Grade.ToString()</td>
                            <td>@item.Status.ToString()</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">No records found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

